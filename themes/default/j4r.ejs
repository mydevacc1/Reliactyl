<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" onclick="document.getElementById('sidebar').classList.toggle('active')">
        <i class="mdi mdi-menu"></i>
    </button>

    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

           <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h2 class="mb-1" style="font-weight: 700; letter-spacing: -0.025em; font-size: 1.8rem;">Join for Rewards</h2>
                    <p class="text-gray mb-0">Join our partner Discord servers to earn extra credits.</p>
                </div>
            </div>

            <div class="row">
              <% for (let i = 0, len = settings.api.client.j4r.ads.length; i < len; i++) { %>
                <div class="col-md-6 grid-margin stretch-card">
                  <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                    <div class="card-body">
                      <div class="d-flex align-items-center mb-3">
                          <div style="background: #5865F2; width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                                <i class="mdi mdi-discord" style="font-size: 24px; color: white;"></i>
                          </div>
                          <div>
                                <h4 class="card-title mb-0"><%= settings.api.client.j4r.ads[i].name %></h4>
                                <span class="badge badge-success mt-1" style="background: rgba(16, 185, 129, 0.1); color: #34d399; border: 1px solid rgba(16, 185, 129, 0.2);">
                                    +<%= settings.api.client.j4r.ads[i].coins %> Coins
                                </span>
                          </div>
                      </div>
                      
                      <form class="forms-sample mt-4">
                        <div class="d-flex gap-2" style="gap: 10px;">
                            <a role="button" class="btn btn-primary flex-grow-1" href="<%= settings.api.client.j4r.ads[i].invite %>" target="_blank">
                                <i class="mdi mdi-account-plus mr-1"></i> Join Server
                            </a> 
                            <a class="btn btn-outline-secondary flex-grow-1" href="../login" style="border-color: var(--border); color: var(--card-foreground);">
                                <i class="mdi mdi-check mr-1"></i> Claim
                            </a>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <!-- endinject -->
    <%- include('./components/scripts') %>
  </body>
</html>