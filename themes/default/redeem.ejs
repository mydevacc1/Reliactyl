<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" onclick="document.getElementById('sidebar').classList.toggle('active')">
        <i class="mdi mdi-menu"></i>
    </button>

    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
           
           <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h2 class="mb-1" style="font-weight: 700; letter-spacing: -0.025em; font-size: 1.8rem;">Redeem Coupon</h2>
                    <p class="text-gray mb-0">Enter a coupon code to claim free resources.</p>
                </div>
            </div>

			<% if (req.query.err) { %>
            <div class="alert fade show mb-4" role="alert" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #f87171; border-radius: var(--radius);">
                <div class="d-flex align-items-center">
                    <i class="mdi mdi-alert-circle mr-2"></i>
                    <span>
                        <% if (req.query.err == "MISSINGCOUPONCODE") { %>
                            You have not provided a coupon code.
                        <% } else if (req.query.err == "INVALIDCOUPONCODE") { %>
                            Invalid coupon code. It may have expired or been claimed.
                        <% } else if (req.query.err == "SUCCESSCOUPONCODE") { %>
                             Success! Resources have been added to your account.
                        <% } else { %>
                            An unknown error occurred.
                        <% } %>
                    </span>
                </div>
			</div>
			<% } %>

            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div style="background: rgba(16, 185, 129, 0.1); width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                            <i class="mdi mdi-ticket-percent" style="font-size: 2rem; color: #10b981;"></i>
                        </div>
                        <div>
                            <h4 class="card-title mb-0">Claim Code</h4>
                            <p class="text-gray mb-0">Paste your promo code below.</p>
                        </div>
                    </div>

					<form action="/coupon_redeem">
                        <div class="form-group mb-4">
                            <label for="code" style="color: var(--muted-foreground); font-weight: 500;">Coupon Code</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="background: var(--muted); border-color: var(--border); color: var(--muted-foreground);"><i class="mdi mdi-barcode"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="RELIACTYL-PROMO" name="code" style="background: var(--background); border-color: var(--border); color: var(--card-foreground); text-transform: uppercase;">
                            </div>
                        </div>
						<button class="btn btn-primary btn-lg btn-block" style="display: flex; align-items: center; justify-content: center;">
                            <i class="mdi mdi-check mr-2"></i> Redeem Coupon
                        </button>
					</form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <%- include('./components/scripts') %>
  </body>
</html>