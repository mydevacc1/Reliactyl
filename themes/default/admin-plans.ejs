<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" onclick="document.getElementById('sidebar').classList.toggle('active')">
        <i class="mdi mdi-menu"></i>
    </button>

    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/adminsidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

           <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h2 class="mb-1" style="font-weight: 700; letter-spacing: -0.025em; font-size: 1.8rem;">Plans Manager</h2>
                    <p class="text-gray mb-0">Assign packages to users.</p>
                </div>
            </div>

            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                  <div class="card-body">
                    <h4 class="card-title mb-4">Set User Plan</h4>
                    <form class="forms-sample">
                      <div class="form-group mb-4">
                        <label for="IDPlan" style="color: var(--muted-foreground);">Discord ID</label>
                        <input type="number" class="form-control" placeholder="Enter user ID" id="IDPlan" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                      </div>
                      <div class="form-group mb-4">
                        <label for="InputPackage" style="color: var(--muted-foreground);">Select Package</label>
                        <select class="form-control" id="package" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                          <% for (let [name, value] of Object.entries(settings.api.client.packages.list)) { %>
                            <option value="<%= name %>"><%= name %> (RAM: <%= value.ram %>MB, Disk: <%= value.disk %>MB, CPU: <%= value.cpu %>%, Servers: <%= value.servers %>)</option>
                          <% } %>
                        </select>
                      </div>
                      
                      <a role="button" class="btn btn-primary btn-block" href="javascript: submitPlan()">Update Plan</a>
                      
                      <div class="mt-4 p-3 rounded" style="background: rgba(245, 158, 11, 0.1); border: 1px solid rgba(245, 158, 11, 0.2);">
                          <div class="d-flex">
                              <i class="mdi mdi-information text-warning mr-2"></i>
                              <small class="text-warning">Note: You cannot set a plan managed by automatic role rewards. Create a duplicate plan to bypass this.</small>
                          </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
          </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <script src="/assets/vendors/select2/select2.min.js"></script>
    <script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <script>
        async function submitPlan() {
            let id = encodeURIComponent(document.getElementById("IDPlan").value);
            let packagename = encodeURIComponent(document.getElementById("package").value);
            window.location.href = "/setplan?id=" + id + "&package=" + packagename
        }
    </script>
    <%- include('./components/scripts') %>
    <script src="/assets/js/file-upload.js"></script>
    <script src="/assets/js/typeahead.js"></script>
    <script src="/assets/js/select2.js"></script>
  </body>
</html>