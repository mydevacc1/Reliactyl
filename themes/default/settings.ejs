<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" onclick="document.getElementById('sidebar').classList.toggle('active')">
        <i class="mdi mdi-menu"></i>
    </button>

    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.4.0/clipboard.min.js" integrity="sha512-iJh0F10blr9SC3d0Ow1ZKHi9kt12NYa+ISlmCdlCdNZzFwjH1JppRTeAnypvUez01HroZhAmP4ro4AvZ/rG0UQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
           
           <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h2 class="mb-1" style="font-weight: 700; letter-spacing: -0.025em; font-size: 1.8rem;">Account Settings</h2>
                    <p class="text-gray mb-0">Manage your profile and security preferences.</p>
                </div>
            </div>

            <% if (req.session.newaccount || req.session.password) { %>
            <div class="alert fade show mb-4" role="alert" style="background: rgba(245, 158, 11, 0.1); border: 1px solid rgba(245, 158, 11, 0.2); color: #fbbf24; border-radius: var(--radius);">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <div class="d-flex align-items-center mb-1">
                            <i class="mdi mdi-key-variant mr-2" style="font-size: 1.25rem;"></i>
                            <span style="font-weight: 600;">Account Credentials</span>
                        </div>
                        <p class="mb-0 text-sm opacity-90">
                            <% if (req.session.newaccount) { %>
                                A new account has been created for you on the Panel.<br>
                            <% } %>
                            <% if (req.session.password) { %>
                                Your password is: <code class="mx-1" id="clipboardExample2" style="background: rgba(0,0,0,0.2); color: white; padding: 2px 6px; border-radius: 4px;"><%= req.session.password %></code>
                            <% } else { %>
                                Please check your email to set your password.
                            <% } %>
                        </p>
                    </div>
                    <% if (req.session.password) { %>
                        <button class="btn btn-warning btn-sm btn-clipboard" data-clipboard-action="copy" data-clipboard-target="#clipboardExample2" style="color: black !important; font-weight: 600;">
                            <i class="mdi mdi-content-copy mr-1"></i> Copy
                        </button>
                    <% } %>
                </div>
            </div>
            <% } %>

            <div class="row">
              <div class="col-md-8 grid-margin stretch-card">
                <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        <div style="position: relative; margin-right: 20px;">
                             <img src="https://cdn.discordapp.com/avatars/<%= userinfo.id %>/<%= userinfo.avatar %>.png?size=128" style="width: 80px; height: 80px; border-radius: 50%; border: 2px solid var(--border);">
                        </div>
                        <div>
                            <h4 class="card-title mb-1"><%= userinfo.username %></h4>
                            <p class="text-gray mb-0">#<%= req.session.userinfo.discriminator %></p>
                        </div>
                    </div>

                    <form class="forms-sample">
                      <div class="form-group mb-4">
                        <label for="Email" style="color: var(--muted-foreground); font-weight: 500;">Email Address</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="background: var(--muted); border-color: var(--border); color: var(--muted-foreground);"><i class="mdi mdi-email-outline"></i></span>
                            </div>
                            <input type="email" class="form-control" value="<%= pterodactyl.email %>" disabled style="background: var(--background); border-color: var(--border); color: var(--muted-foreground); opacity: 0.8;">
                        </div>
                      </div>
                      
                      <div class="form-group mb-4">
                        <label for="Username" style="color: var(--muted-foreground); font-weight: 500;">Panel Username</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="background: var(--muted); border-color: var(--border); color: var(--muted-foreground);"><i class="mdi mdi-account-outline"></i></span>
                            </div>
                            <input type="text" class="form-control" value="<%= pterodactyl.username %>" disabled style="background: var(--background); border-color: var(--border); color: var(--muted-foreground); opacity: 0.8;">
                        </div>
                      </div>

                      <div class="d-flex flex-column flex-md-row gap-3 mt-4" style="gap: 15px;">
                  		  <a role="button" class="btn btn-outline-secondary flex-grow-1" href="/regen" style="border-color: var(--border); color: var(--card-foreground);">
                                <i class="mdi mdi-lock-reset mr-2"></i> Reset Password
                          </a>
                  		  <a role="button" class="btn btn-primary flex-grow-1" href="/updateinfo">
                                <i class="mdi mdi-refresh mr-2"></i> Sync Data
                          </a>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
            <script>
            var clipboard = new Clipboard('.btn-clipboard');
            clipboard.on('success', function(e) {
               // Optional: Show toast or tooltip
               e.clearSelection();
            });
            </script>
            
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <%- include('./components/scripts') %>
  </body>
</html>