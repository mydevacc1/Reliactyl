<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" onclick="document.getElementById('sidebar').classList.toggle('active')">
        <i class="mdi mdi-menu"></i>
    </button>

    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/adminsidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

           <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h2 class="mb-1" style="font-weight: 700; letter-spacing: -0.025em; font-size: 1.8rem;">Coins Manager</h2>
                    <p class="text-gray mb-0">Add or set coins for users.</p>
                </div>
            </div>

            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                  <div class="card-body">
                    <h4 class="card-title mb-4">Set User Coins</h4>
                    <form action="/setcoins">
                        <div class="form-group mb-4">
                            <label for="id" style="color: var(--muted-foreground); font-weight: 500;">Discord ID</label>
                            <input class="form-control" name="id" placeholder="0000000000000000" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                        </div>
                        <div class="form-group mb-4">
                            <label for="coins" style="color: var(--muted-foreground); font-weight: 500;">Amount</label>
                            <input class="form-control" name="coins" placeholder="100" type="number" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">Set Balance</button>
                    </form>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                  <div class="card-body">
                    <h4 class="card-title mb-4">Add User Coins</h4>
                    <form action="/addcoins">
                        <div class="form-group mb-4">
                            <label for="id" style="color: var(--muted-foreground); font-weight: 500;">Discord ID</label>
                            <input class="form-control" name="id" placeholder="0000000000000000" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                        </div>
                        <div class="form-group mb-4">
                            <label for="coins" style="color: var(--muted-foreground); font-weight: 500;">Amount</label>
                            <input class="form-control" name="coins" placeholder="100" type="number" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">Add to Balance</button>
                    </form>
                </div>
              </div>
            </div>
          </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <%- include('./components/scripts') %>
  </body>
</html>