<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" onclick="document.getElementById('sidebar').classList.toggle('active')">
        <i class="mdi mdi-menu"></i>
    </button>

    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/adminsidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">

           <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
                <div>
                    <h2 class="mb-1" style="font-weight: 700; letter-spacing: -0.025em; font-size: 1.8rem;">Coupon Manager</h2>
                    <p class="text-gray mb-0">Create and manage resource coupons.</p>
                </div>
            </div>

            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                  <div class="card-body">
                    <h4 class="card-title mb-4">Create Coupon</h4>
                    <form action="/create_coupon">
                        <div class="form-group mb-3">
                            <label for="code" style="color: var(--muted-foreground);">Code</label>
                            <input class="form-control" name="code" placeholder="Leave empty for random" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                        </div>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label for="coins" style="color: var(--muted-foreground);">Coins</label>
                                <input class="form-control" placeholder="0" name="coins" type="number" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                            </div>
                            <div class="col-6 mb-3">
                                <label for="ram" style="color: var(--muted-foreground);">RAM (GB)</label>
                                <input class="form-control" placeholder="0" name="ram" type="number" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                            </div>
                            <div class="col-6 mb-3">
                                <label for="disk" style="color: var(--muted-foreground);">Disk (GB)</label>
                                <input class="form-control" placeholder="0" name="disk" type="number" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                            </div>
                            <div class="col-6 mb-3">
                                <label for="cpu" style="color: var(--muted-foreground);">CPU (Cores)</label>
                                <input class="form-control" placeholder="0" name="cpu" type="number" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                            </div>
                             <div class="col-12 mb-3">
                                <label for="servers" style="color: var(--muted-foreground);">Servers</label>
                                <input class="form-control" placeholder="0" name="servers" type="number" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                            </div>
                        </div>
                        <button class="btn btn-primary btn-block mt-2" type="submit">Create Coupon</button>
                    </form>
                  </div>
                </div>
              </div>

              <div class="col-md-6 grid-margin stretch-card">
                <div class="card" style="background: var(--card); border: 1px solid var(--border);">
                  <div class="card-body">
                    <h4 class="card-title mb-4">Revoke Coupon</h4>
                    <form action="/revoke_coupon">
                        <div class="form-group mb-4">
                            <label for="code" style="color: var(--muted-foreground);">Coupon Code</label>
                            <input placeholder="ENTER-CODE-HERE" class="form-control" name="code" style="background: var(--background); border-color: var(--border); color: var(--card-foreground);">
                        </div>
                        <button class="btn btn-danger btn-block" type="submit">Revoke Coupon</button>
                    </form>
                  </div>
                </div>
              </div>
          </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <%- include('./components/scripts') %>
  </body>
</html>